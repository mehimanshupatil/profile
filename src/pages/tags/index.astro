---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getAllPostSorted } from "../../helpers/helper";
const allPosts = await getAllPostSorted();

const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
const title = "Tag Index";
---

<BaseLayout title={title} description="">
  <h3>{title}</h3>

  <div class="tags">
    {
      tags.map((tag) => (
        <p class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>
</BaseLayout>
<style>
  a {
    color: #00539f;
  }
  h3,
  p {
    width: 960px;
    max-width: calc(100% - 2rem);
    margin: auto;
    margin-bottom: 16px;
  }
  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
    width: 100%;
    max-width: 80ch;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>
